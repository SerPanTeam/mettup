{
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/css"
        }
    ],
    "liveSassCompile.settings.includeItems": [
        "scss/**/*.scss"  // Отслеживаем все SCSS файлы в папке scss
    ],
    "liveSassCompile.settings.excludeList": [
        "node_modules/**",
        ".vscode/**"
    ],
    "liveSassCompile.settings.generateMap": true  // Включаем Source Maps
}
